@using Microsoft.AspNetCore.Identity;
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Home Page";
    Layout="~/Views/Shared/_AdminLayout.cshtml";
}

                          
                              <div class="full graph_head">
                                 <div class="heading1 margin_0">
                                    <h2>Kullan覺c覺 Listesi</h2>
                                    <a class="btn btn-primary" asp-action="Create">Kullan覺c覺 Ekle</a>
                                    <hr>
                                 </div>
                              </div>

                              <div class="table_section padding_infor_info">
                                 <div class="table-responsive-sm">
                                    <table class="table table-hover">
                                       <thead>
                                          <tr>
                                             <th>Id </th>
                                             <th>Name</th>
                                             <th>LastName</th>
                                             <th>Email</th>
                                             <th>City</th>
                                         
                                              <th></th>
                           

                                          </tr>
                                       </thead>
                                       <tbody>
                                       @foreach(var user in Model){
                                          <tr>
                                             <td>@user.Id</td>
                                             <td>@user.UserName</td>
                                            <td>@user.LastName</td>
                                             <td>@user.Email</td>
                                             <td>@user.City.Name</td>
                                             <td>
                                                <a asp-action="Edit" asp-route-id="@user.Id"  class="btn btn-primary btn-sm">Edit</a>
                                                 <form asp-action="Delete" method="post" onsubmit="return confirm('Emin Misiniz?')" style="display:inline-block;" >
                                                <input type="hidden" value="@user.Id" name="id">
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                              </form>
                                             </td>
                                           
                                          </tr>
                                        }
                                       </tbody>
                                    </table>
                                 </div>
                              </div>
                      