@model IEnumerable<BitirmeApp3.ViewModels.AppliedAdvertisementsViewModel>
@{
    ViewData["Title"] = "InApp - Applied Advertisements";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wishlist-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>İlan Resim</th>
                                <th>İlan Sahibi</th>
                                <th>İlan Title</th>
                                <th>İlan Başvuranlar</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ad in Model)
                            {
                                <tr>
                                    <td class="thumbnail-img">
                                        <a href="#">
                                            <img src="@ad.ImageUrl" alt="" style="width: 60px; height: 50px; object-fit: cover;" />
                                        </a>
                                    </td>
                                    <td class="name-pr">
                                        <a href="#">
                                            @ad.OwnerName
                                        </a>
                                    </td>
                                    <td class="name-pr">
                                        <a href="#">
                                            @ad.AdvertisementTitle
                                        </a>
                                    </td>
                                    <td class="name-pr">
                                        @foreach (var applicant in ad.Applicants)
                                        {
                                            <div>
                                                <strong>@applicant.Name @applicant.Surname</strong> (@applicant.Email)
                                            </div>
                                        }
                      
                                    
                                    <td class="price-pr">
                                        <div>@ad.Status</div>
                                        @foreach (var applicant in ad.Applicants)
                                        {
                                            @if (applicant.IsApproved == true)
                                            {
                                                <span class="badge badge-success">Başvuru Onaylandı</span>
                                            }
                                            else if (applicant.IsRejected == true)
                                            {
                                                <span class="badge badge-danger">Başvuru Reddedildi</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Başvuru Beklemede</span>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
