@model IEnumerable<BitirmeApp3.Models.Advertisement>

@{
    ViewData["Title"] = "My Advertisements";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Açtığım İlanlar</h3>
<hr>
<hr>
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            @if (Model.Any())
            {
                foreach (var advertisement in Model)
                {
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                        <div class="products-single fix">
                            <div class="box-img-hover" >
                                <img   src="@advertisement.ImageUrl" style="max-width: 300px; max-height: 300px;" class="img-fluid" alt="Image">
                       
                                <div class="mask-icon">
                                    <ul>
                                        <li><a href="@Url.Action("Details", "Advertisement", new { id = advertisement.Id })" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="why-text">
                                <h4>@advertisement.Title</h4>
                                <h5>@advertisement.Status</h5>
                                <h5>@advertisement.Content</h5>
                                <h5>@advertisement.Tag</h5>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        No advertisements found.
                    </div>
                </div>
            }
        </div>
    </div>
</div>
